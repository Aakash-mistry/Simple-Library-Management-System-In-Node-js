<div class="login">
   <div class="container row center">

     <div class="row">
        <div class="center">
           <div class="col s3"></div>
           <div class="col s12 l6 z-depth-1" style="
           margin-top: 20px;
           border-radius: 5px;
           ">

              <div class="fieldBoxLogin">
                 <div style="">
                 <img src="../../images/SVGS/account.svg" width="100">
                 </div>

{{!-- input field --}}
               <div class="">
                  <h4>Welcome Anonymouse</h4>
                  <form action="/signin" method="POST" autocomplete="off">
                     <div class="row inputField">
                        <div class="row">
                           <div class="input-field col s12">
                              <input id="email" type="email" name="email" class="validate">
                              <label for="email">Email</label>
                           </div></div>
                           <div class="row">
                           <div class="input-field col s12">
                              <input id="password" type="password" name="password" class="validate">
                              <label for="password">Password</label>
                              {{#if messages}}
                                 <div class="red-text">
                                    {{messages}}
                                 </div>
                              {{/ if}}
                           </div>
                     </div>
                      <button type="submit" class="btn col s12 center indigo black-text z-depth-0"
                style="border-radius: 2px!important;"
              >Login</button>
              <a href="/register" class="btn col s12 center black-text z-depth-0"
               style="border-radius: 2px!important;">Not Have an Accoount?</a>
                  </form>
               </div>
              </div>
           </div>
           <div class="col s3"></div>
        </div>
     </div>

   </div>
</div>
